<form asp-action="AddImageToScene" method="post" enctype="multipart/form-data">
    <!-- Фото для сцени -->
    <p>Фото для сцени</p>
    <div class="form-group mb-4">
        <label for="scenePhotos" class="form-label">Фото для сцени:</label>
        <input type="file" id="scenePhotos" name="scenePhotos" accept="image/*" class="form-control" onchange="previewImages(this, 'scenePreview')" multiple>
        <div id="scenePreview" class="mt-3 d-flex flex-wrap gap-3"></div>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Завантажити</button>
</form>
<form asp-action="AddPersonageToScene" method="post" enctype="multipart/form-data">
    <!-- Фото для персонажів -->
    <p>Фото для персонажів</p>
    <div class="form-group mb-4">
        <label for="characterPhotos" class="form-label">Фото для персонажів:</label>
        <input type="file" id="characterPhotos" name="characterPhotos" accept="image/*" class="form-control" onchange="previewImages(this, 'characterPreview')" multiple>
        <div id="characterPreview" class="mt-3 d-flex flex-wrap gap-3"></div>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Завантажити</button>
</form>
<form asp-action="AddAdditionalToScene" method="post" enctype="multipart/form-data">
    <!-- Додаткові фото -->
    <p>Додаткові фото</p>
    <div class="form-group mb-4">
        <label for="extraPhotos" class="form-label">Додаткові фото:</label>
        <input type="file" id="extraPhotos" name="extraPhotos" accept="image/*" class="form-control" onchange="previewImages(this, 'extraPreview')" multiple>
        <div id="extraPreview" class="mt-3 d-flex flex-wrap gap-3"></div>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Завантажити</button>
</form>
<script>
    function previewImages(inputElement, previewContainerId) {
        const previewContainer = document.getElementById(previewContainerId);
        const files = inputElement.files;

        previewContainer.innerHTML = "";

        Array.from(files).forEach(file => {
            const reader = new FileReader();
            reader.onload = function (e) {
                const img = document.createElement("img");
                img.src = e.target.result;
                img.style.maxWidth = "200px";
                img.style.maxHeight = "150px";
                img.classList.add("border", "rounded", "p-1");
                previewContainer.appendChild(img);
            };
            reader.readAsDataURL(file);
        });
    }
</script>
