@{
    ViewData["Title"] = "Dream Inspired Menu";
    Layout = null; // Не використовуємо layout, щоб мати повний контроль над HTML
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css">
</head>
<body>
    <div class="logo-and-menu-wrapper">
        <div class="logo-container">
            <img src="~/img/Dream.jpg" alt="Game Logo" class="game-logo" >
        </div>
        <div class="menu-container" id="mainMenuContainer">
            <h1 class="menu-title">Dream</h1>
            <h2 class="menu-subtitle"><span class="icon">♥</span> ГЛАВНОЕ МЕНЮ</h2>
            <ul class="main-menu">
                <li><a href="#" class="menu-item" data-lang-key="peaceful_mode">МИРНЫЙ РЕЖИМ</a></li>
                <li><a href="#" class="menu-item" data-lang-key="continue_game">ПРОДОЛЖИТЬ</a></li>
                <li><a href="#" class="menu-item" data-lang-key="new_game">НОВАЯ ИГРА</a></li>
                <li><a href="#" class="menu-item" data-lang-key="load_game">ЗАГРУЗИТЬ</a></li>
                <li><a href="#" class="menu-item" data-lang-key="characters">ПЕРСОНАЖИ</a></li>
                <li><a href="#" class="menu-item" data-lang-key="clothes">ОДЕЖДА</a></li>
                <li><a href="#" class="menu-item" id="settingsLink" data-lang-key="settings">НАСТРОЙКИ</a></li>
                <li><a href="#" class="menu-item" data-lang-key="achievements">ДОСТИЖЕНИЯ <span class="achievement-count">26/26</span></a></li>
                <li><a href="#" class="menu-item" id="authorsLink" data-lang-key="authors">АВТОРЫ</a></li>
                <li class="language-row">
                    <a href="#" class="menu-item" data-lang-key="language">ЯЗЫК</a>
                    <span class="language-value" id="languageValue">Русский</span>
                </li>
                <li class="language-row">
                    <a href="#" class="menu-item" data-lang-key="voiceover">ОЗВУЧКА</a>
                    <span class="language-value" id="voiceoverValue">Русский</span>
                </li>
                <li><a href="#" class="menu-item exit-button" data-lang-key="exit" id="exitButton">ВЫХОД</a></li>
            </ul>
        </div>
    </div>

    <div id="authorsMenu" class="authors-menu-container hidden">
        <h3 class="authors-title" data-lang-key="authors_novel_title">АВТОРЫ НОВЕЛЛЫ</h3>
        <ul class="authors-list">
            <li><p data-lang-key="scenario_writer" class="author-info">Сценарист: <span class="author-name">Ім'я Сценариста</span></p></li>
            <li><p data-lang-key="artist" class="author-info">Художник: <span class="author-name">Ім'я Художника</span></p></li>
            <li><p data-lang-key="programmer" class="author-info">Програміст: <span class="author-name">Ім'я Програміста</span></p></li>
            <li><p data-lang-key="music" class="author-info">Музика: <span class="author-name">Ім'я Композитора</span></p></li>
        </ul>
        <button id="closeAuthorsMenu" class="close-button" data-lang-key="close">ЗАКРЫТЬ</button>
    </div>

    <div id="settingsMenu" class="settings-menu-container hidden">
        <h3 class="settings-title" data-lang-key="settings_title">НАСТРОЙКИ</h3>
        <div class="settings-section">
            <h4 data-lang-key="interface_themes">Темы интерфейса:</h4>
            <div class="theme-options">
                <button class="setting-button theme-button" id="themeLight" data-lang-key="theme_light" data-theme="light">Светлая</button>
                <button class="setting-button theme-button" id="themeDark" data-lang-key="theme_dark" data-theme="dark">Темная</button>
                <button class="setting-button theme-button" id="themeBlue" data-lang-key="theme_blue" data-theme="blue">Блакитная</button>
            </div>
        </div>

        <div class="settings-section">
            <h4 data-lang-key="interface_scale">Масштаб интерфейса:</h4>
            <div class="scale-options">
                <button class="setting-button scale-button" id="scaleSmall" data-lang-key="scale_small" data-scale="small">Мелкий</button>
                <button class="setting-button scale-button" id="scaleNormal" data-lang-key="scale_normal" data-scale="normal">Обычный</button>
                <button class="setting-button scale-button" id="scaleLarge" data-lang-key="scale_large" data-scale="large">Крупный</button>
            </div>
        </div>

        <div class="settings-section">
            <h4 data-lang-key="language_settings">Язык:</h4>
            <div class="language-settings-options">
                <button class="setting-button lang-button" id="langUkrainian" data-lang-value="ukrainian">Українська</button>
                <button class="setting-button lang-button" id="langRussian" data-lang-value="russian">Русский</button>
                <button class="setting-button lang-button" id="langEnglish" data-lang-value="english">English</button>
            </div>
        </div>

        <button id="closeSettingsMenu" class="close-button" data-lang-key="close">ЗАКРЫТЬ</button>
    </div>

    <script src="~/js/site.js"></script>
</body>
</html>