@{
    ViewData["Title"] = "Dream Inspired Menu";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css">
</head>
<body>
    <div class="menu-container">
        <h1 class="menu-title">Dream</h1>
        <h2 class="menu-subtitle"><span class="icon">♥</span> ГЛАВНОЕ МЕНЮ</h2>
        <ul class="main-menu">
            <li><a href="#" class="menu-item">МИРНЫЙ РЕЖИМ</a></li>
            <li><a href="#" class="menu-item">ПРОДОЛЖИТЬ</a></li>
            <li><a href="#" class="menu-item">НОВАЯ ИГРА</a></li>
            <li><a href="#" class="menu-item">ЗАГРУЗИТЬ</a></li>
            <li><a href="#" class="menu-item">ПЕРСОНАЖИ</a></li>
            <li><a href="#" class="menu-item">ОДЕЖДА</a></li>
            <li><a href="#" class="menu-item" id="settingsLink">НАСТРОЙКИ</a></li> <li><a href="#" class="menu-item">ДОСТИЖЕНИЯ <span class="achievement-count">26/26</span></a></li>
            <li><a href="#" class="menu-item" id="authorsLink">АВТОРЫ</a></li>
            <li class="language-row">
                <a href="#" class="menu-item">ЯЗЫК</a>
                <span class="language-value">Русский</span>
            </li>
            <li class="language-row">
                <a href="#" class="menu-item">ОЗВУЧКА</a>
                <span class="language-value">Русский</span>
            </li>
            <li><a href="#" class="menu-item exit-button">ВЫХОД</a></li>
        </ul>
    </div>

    <div class="logo-container">
        <img src="~/img/Dream.jpg" alt="Game Logo" class="game-logo">
    </div>

    <div id="authorsMenu" class="authors-menu-container hidden">
        <h3 class="authors-title">АВТОРЫ НОВЕЛЛЫ</h3>
        <ul class="authors-list">
            <li><p>Сценарист: <span class="author-name">Alyona Okey</span></p></li>
            <li><p>Художники: <span class="author-name">Youbi , Zorochka 🍃 , Alyona Okey </span></p></li>
            <li><p>Програмісти: <span class="author-name">𝕯𝖎𝖘𝖆𝖏 , _ТоРтІк_</span></p></li>
            <li><p>Музика: <span class="author-name">Ім'я Композитора</span></p></li>
        </ul>
        <button id="closeAuthorsMenu" class="close-button">ЗАКРЫТЬ</button>
    </div>

    <div id="settingsMenu" class="settings-menu-container hidden">
        <h3 class="settings-title">НАСТРОЙКИ</h3>
        <div class="settings-section">
            <h4>Темы интерфейса:</h4>
            <div class="theme-options">
                <button class="setting-button theme-button" id="themeLight">Светлая</button>
                <button class="setting-button theme-button" id="themeDark">Темная</button>
                <button class="setting-button theme-button" id="themeBlue">Блакитная</button>
            </div>
        </div>

        <div class="settings-section">
            <h4>Масштаб интерфейса:</h4>
            <div class="scale-options">
                <button class="setting-button scale-button" id="scaleSmall">Мелкий</button>
                <button class="setting-button scale-button" id="scaleNormal">Обычный</button>
                <button class="setting-button scale-button" id="scaleLarge">Крупный</button>
            </div>
        </div>

        <button id="closeSettingsMenu" class="close-button">ЗАКРЫТЬ</button>
    </div>

    <script src="~/js/site.js"></script>
</body>
</html>