@{
    ViewData["Title"] = "Dream Inspired Menu";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css">
</head>
<body>
    <div class="menu-container">
        <h1 class="menu-title">Dream</h1>
        <h2 class="menu-subtitle">ГЛАВНОЕ МЕНЮ</h2>
        <ul class="main-menu">
            <li><a href="#" class="menu-item">МИРНЫЙ РЕЖИМ</a></li>
            <li><a href="@Url.Action("NewGame", "Home")?action=continue" class="menu-item">ПРОДОЛЖИТЬ</a></li>
            <li><a href="@Url.Action("NewGame", "Home")?action=new" class="menu-item">НОВАЯ ИГРА</a></li>
            <li><a href="#" class="menu-item">ЗАГРУЗИТЬ</a></li>
            <li><a href="#" class="menu-item">ПЕРСОНАЖИ</a></li>
            <li><a href="#" class="menu-item">ОДЕЖДА</a></li>
            <li><a href="#" class="menu-item">НАСТРОЙКИ</a></li>
            <li><a href="#" class="menu-item">ДОСТИЖЕНИЯ <span class="achievement-count">26/26</span></a></li>
            <li><a href="#" class="menu-item">АВТОРЫ</a></li>
            <li class="language-row">
                <a href="#" class="menu-item">ЯЗЫК</a>
                <span class="language-value">Русский</span>
            </li>
            <li class="language-row">
                <a href="#" class="menu-item">ОЗВУЧКА</a>
                <span class="language-value">Русский</span>
            </li>
            <li><a href="#" class="menu-item exit-button">ВЫХОД</a></li>
        </ul>
    </div>
</body>
</html>